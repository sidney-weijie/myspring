<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.sidney.mybatis.UserDao">
	<select id="getUser" parameterType="com.sidney.mybatis.User"
		resultType="com.sidney.mybatis.User">
		SELECT * FROM mybatis_user WHERE name=#{name} AND password=#{password}
	</select>
	<insert id="addUser" parameterType="com.sidney.mybatis.User"
		flushCache="true">
		INSERT INTO mybatis_user (id,name,password) VALUES
		(#{id},#{name},#{password})
	</insert>
	<update id="updateUser" parameterType="com.sidney.mybatis.User">
		UPDATE mybatis_user SET password=#{password} WHERE id=#{id}
	</update>
	<delete id="deleteUser" parameterType="int">
		DELETE FROM mybatis_user WHERE id=#{id}
	</delete>
</mapper>